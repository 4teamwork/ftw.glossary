<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

	<form method="post" 
	      tal:attributes="action string:${context/absolute_url}/${view/__name__}">
	    <input type="hidden" name="form.submitted:boolean" value="True" />
	    <input id="glossary-search-field" name="glossary-search-field" type="text"/>
	    <input name="glossary-search-button" type="submit" value="Search"/>
	</form>

        <script type="text/javascript"
	        tal:content="string:jq('#glossary-search-field').autocomplete(
	        {source:'${context/absolute_url}/${view/__name__}/matching_terms'});">
        </script>

	<div>
	    <dl tal:define="terms view/search_results">
	        <tal:items tal:repeat="item terms">
	        <dt tal:content="item/term"/>
	        <dd tal:content="structure item/description"/>
	        </tal:items>
	    </dl>
	</div>
    </metal:content-core>
</metal:content-core>

</body>
</html>



